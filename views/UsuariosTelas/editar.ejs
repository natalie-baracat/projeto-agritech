<%- include('../includes/header.ejs', {titulo: 'Editar Usuário' }) %>
<main>
    <h2>Editando Usuário</h2>
    
    <form action="/usuarios/<%= usuario.id_usuario %>/editar" method="post" class="form">
        <div class="form-group">
            <label for="nome">Insira a URL da foto de perfil:</label>
            <input type="text" id="foto_perfil" name="foto_perfil" value="<%=usuario.foto_perfil%>">
        </div>
        <div class="form-group">
            <label for="imagem">Nome:</label>
            <input type="text" id="nome" name="nome" value="<%= usuario.nome %>" required>
        </div>
        <div class="form-group">
            <label for="username">Nome de Usuário:</label>
            <input type="text" id="usuario " name="usuario" value="<%= usuario.usuario %>" required>
        </div>                <!-- usuario  -->
        <div class="form-group">
            <label for="password">Senha:</label>
            <input type="password" id="password" name="senha" value="<%= usuario.senha %>"required>
            <i class="bi bi-eye-fill eye" id="btn-senha" onclick="MostrarSenha()"></i>
            
        </div>                   <!-- senha  -->
        
        <button type="submit" class="btn btn-edit">Salvar Alterações</button>
        <a href="/usuarios" class="btn btn-secondary">Cancelar</a>
    </form>
</main>
<script>
      function MostrarSenha() {
        var inputPass = document.getElementById('password');
        var btnShowPass = document.getElementById('btn-senha');
        
        if (inputPass.type === 'password') {
            inputPass.setAttribute('type', 'text');
            btnShowPass.classList.replace('bi-eye-fill', 'bi-eye-slash-fill');
        } else {
            inputPass.setAttribute('type', 'password');
            btnShowPass.classList.replace('bi-eye-slash-fill', 'bi-eye-fill');
        }
    }
</script>


