<%- include('../includes/header.ejs', {titulo: 'Lista de categorias' }) %>
    <main class="fundo-com-imagem">
        <div class="fundo-trans">

            <h2>Lista Categoria</h2>
            
            <div class="w-100 d-flex justify-content-center">
                <div class="pesquisar-e-add d-flex justify-content-center align-items-center">
                    <form action="/categorias/" method="GET" class="form form-consulta m-3">
                        <input type="text" name="busca" value="<%=busca%>" placeholder="Buscar Categoria">
                        <button class="btn btn-success">Buscar</button>
                        <select name="ordenar" onchange="this.form.submit() // isso Ã© um comando de JS!!">
                            <option value="nome_categoria" <%= ordenar == 'nome_categoria' ? 'selected' : '' %>>Ordenar por nome</option>
                        </select>
                    </form>
                    <a href="/categorias/novo" class="btn btn-success">Adicionar Categoria</a>
                </div>
            </div>

                <div class="d-flex flex-wrap justify-content-center">
                    <% for(let categoria of categoriasCadastradas) { %>
                        <div class="d-flex gap-3 flex-wrap justify-content-center m-3 card ">
                                <div class="card-body text-center">
                                    <img src="" alt="" class="imagem-card">
                                    <h5 class="card-title"><%= categoria.nome_categoria%></h5>
                                    <br>
                                    <a href="/categorias/<%= categoria.id_categoria %> /editar" class="btn btn-edit">Editar</a>
                                    <form action="/categorias/<%= categoria.id_categoria %>/deletar" method="POST">
                                       <button type="submit" class="btn btn-delete" onclick="return confirm('Tem certeza que deseja excluir esta categoria?')" >Inativar</button>
                                    </form>
                                </div>
                        </div>
                
                        <% } %>
                    </div>
        </div>
    </main>
    <%- include('../includes/footer.ejs') %>